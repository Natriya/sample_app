<tr>
   <td class="gravatar">
      <%= link_to gravatar_for(feed_item.user), feed_item.user %>
   </td>
   <td class="micropost">
      <span class="user">
         <%= link_to feed_item.user.nom, feed_item.user %>
      </span>
      <span class="content"><%= wrap(feed_item.content) %></span>
      <span class="timestamp">
         Post√© il y a <%= time_ago_in_words(feed_item.created_at) %>
      </span>
   </td>
   <% if current_user?(feed_item.user) %> 
   <td>
      <%= link_to "supprimer", feed_item, :method => :delete,
                                          :confirm => "Etes-vous certain?",
                                          :title => feed_item.content %>
   </td> 
   <% end %>
</tr>